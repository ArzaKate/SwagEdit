<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.reprezen.swagedit"
            name="%category.name">
      </category>
      <wizard
            category="com.reprezen.swagedit"
            class="com.reprezen.swagedit.wizards.SwagEditNewWizard"
            icon="icons/swagger_32.jpg"
            id="com.reprezen.swagedit.wizards.SwagEditNewWizard"
            name="%wizard.name">
      </wizard>
   </extension>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.reprezen.swagedit.editor.SwaggerEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            filenames="yaml"
            icon="icons/swagger_16.jpg"
            id="com.reprezen.swagedit.editor"
            name="%editor.name">
         <contentTypeBinding
               contentTypeId="com.reprezen.swagedit.contentTypeBinding">
         </contentTypeBinding>
      </editor>
   </extension>

   <extension
         point="org.dadacoalition.yedit.sourceViewerConfigurationContribution">
         <sourceViewerConfiguration
         	class="com.reprezen.swagedit.editor.SwaggerSourceViewerConfiguration">
         </sourceViewerConfiguration>
   </extension>

   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="yaml"
            id="com.reprezen.swagedit.contentTypeBinding"
            name="%content-type.name"
            priority="high">
      </content-type>
   </extension>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.reprezen.swagedit.preferences.SwaggerPreferencePage"
            id="com.reprezen.swagedit.preferences"
            name="%page.name">
      </page>
      <page
            category="com.reprezen.swagedit.preferences"
            class="com.reprezen.swagedit.preferences.SwaggerColorPreferences"
            id="com.reprezen.swagedit.preferences.SwaggerColorPreferences"
            name="%page.name.0">
      </page>
      <page
            category="com.reprezen.swagedit.preferences"
            class="com.reprezen.swagedit.preferences.SwaggerTemplatePreferences"
            id="com.reprezen.swagedit.preferences.SwaggerTemplatePreferences"
            name="Templates">
      </page>
   </extension>

   <extension
         point="org.eclipse.ui.editors.templates">
      <contextType
            class="com.reprezen.swagedit.templates.SwaggerContentType"
            id="com.reprezen.swagedit.templates.swagger"
            name="Swagger Context">
      </contextType>

      <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger"
            id="com.reprezen.swagedit.templates.swagger_template"
            name="swagger"
            description="default template">
         <pattern>
swagger: "2.0"
         </pattern>
      </template>

      <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger"
            id="com.reprezen.swagedit.templates.info_template"
            name="info"
            description="default template">
         <pattern>
info:
  version: ${version}
  title: ${title}
  description: ${description}
  termsOfService: ${terms}
  contact:
    name: ${name}
    url: ${url}
    email: ${email}
  license:
    name: MIT
    url: http://opensource.org/licenses/MIT
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger"
            id="com.reprezen.swagedit.templates.paths_template"
            name="paths"
            description="default template">
         <pattern>
paths:
  /:
    get:
      responses:
        '200':
          description: Ok
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger"
            id="com.reprezen.swagedit.templates.definitions_template"
            name="definitions"
            description="default template">
         <pattern>
definitions:
  ${model}:
    title: "${model}"
    type: string
         </pattern>
      </template>

   </extension>

</plugin>
