<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.reprezen.swagedit"
            name="%category.name">
      </category>
      <wizard
            category="com.reprezen.swagedit"
            class="com.reprezen.swagedit.wizards.SwagEditNewWizard"
            icon="icons/swagger_32.jpg"
            id="com.reprezen.swagedit.wizards.SwagEditNewWizard"
            name="%wizard.name">
      </wizard>
   </extension>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.reprezen.swagedit.editor.SwaggerEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="false"
            filenames="yaml"
            icon="icons/swagger_16.jpg"
            id="com.reprezen.swagedit.editor"
            name="%editor.name">
         <contentTypeBinding
               contentTypeId="com.reprezen.swagedit.contenttype.swagger.yaml">
         </contentTypeBinding>
      </editor>
   </extension>

   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            describer="com.reprezen.swagedit.editor.SwaggerContentDescriber"
            file-extensions="yaml"
            id="com.reprezen.swagedit.contenttype.swagger.yaml"
            name="%content-type.name"
            priority="high">
         <describer
               class="com.reprezen.swagedit.editor.SwaggerContentDescriber">
         </describer>
      </content-type>
   </extension>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.reprezen.swagedit.preferences.SwaggerPreferencePage"
            id="com.reprezen.swagedit.preferences"
            name="%page.name">
      </page>
      <page
            category="com.reprezen.swagedit.preferences"
            class="com.reprezen.swagedit.preferences.SwaggerColorPreferences"
            id="com.reprezen.swagedit.preferences.SwaggerColorPreferences"
            name="%page.name.0">
      </page>
      <page
            category="com.reprezen.swagedit.preferences"
            class="com.reprezen.swagedit.preferences.SwaggerTemplatePreferences"
            id="com.reprezen.swagedit.preferences.SwaggerTemplatePreferences"
            name="Templates">
      </page>
   </extension>

   <extension
         point="org.eclipse.ui.editors.templates">
      <contextType
            class="com.reprezen.swagedit.templates.RootContextType"
            id="com.reprezen.swagedit.templates.swagger.root"
            name="Swagger Context">
      </contextType>
      <contextType
            class="com.reprezen.swagedit.templates.PathContextType"
            id="com.reprezen.swagedit.templates.swagger.path"
            name="Path Context">
      </contextType>

      <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.root"
            id="com.reprezen.swagedit.templates.swagger_template"
            name="swagger"
            description="default template">
         <pattern>
swagger: "2.0"
         </pattern>
      </template>

      <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.root"
            id="com.reprezen.swagedit.templates.info_template"
            name="info"
            description="default template">
         <pattern>
info:
  version: ${version}
  title: ${title}
  description: ${description}
  termsOfService: ${terms}
  contact:
    name: ${name}
    url: ${url}
    email: ${email}
  license:
    name: MIT
    url: http://opensource.org/licenses/MIT
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.root"
            id="com.reprezen.swagedit.templates.paths_template"
            name="paths"
            description="default template">
         <pattern>
paths:
  /:
    get:
      responses:
        '200':
          description: Ok
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.root"
            id="com.reprezen.swagedit.templates.definitions_template"
            name="definitions"
            description="default template">
         <pattern>
definitions:
  ${model}:
    title: "${model}"
    type: string
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.path"
            id="com.reprezen.swagedit.templates.path_get_template"
            name="get"
            description="default template">
         <pattern>
get:
      summary:
      description: 
      responses:
        '200':
          description: OK
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.path"
            id="com.reprezen.swagedit.templates.path_post_template"
            name="post"
            description="default template">
         <pattern>
post:
      summary:
      description: 
      responses:
        '200':
          description: OK
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.path"
            id="com.reprezen.swagedit.templates.path_put_template"
            name="put"
            description="default template">
         <pattern>
put:
      summary:
      description: 
      responses:
        '200':
          description: OK
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.path"
            id="com.reprezen.swagedit.templates.path_delete_template"
            name="delete"
            description="default template">
         <pattern>
delete:
      summary:
      description: 
      responses:
        '200':
          description: OK
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.path"
            id="com.reprezen.swagedit.templates.path_delete_template"
            name="delete"
            description="default template">
         <pattern>
delete:
      summary:
      description: 
      responses:
        '200':
          description: OK
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.path"
            id="com.reprezen.swagedit.templates.path_patch_template"
            name="patch"
            description="default template">
         <pattern>
patch:
      summary:
      description: 
      responses:
        '200':
          description: OK
         </pattern>
      </template>

     <template
            autoinsert="true"
            contextTypeId="com.reprezen.swagedit.templates.swagger.path"
            id="com.reprezen.swagedit.templates.path_options_template"
            name="options"
            description="default template">
         <pattern>
options:
      summary:
      description: 
      responses:
        '200':
          description: OK
         </pattern>
      </template>

   </extension>

</plugin>
